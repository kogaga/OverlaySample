<com.example.overlaysample.view.TutorialView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6000" >

    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="半透明化＋タッチイベントを通過させてチュートリアル的にも使える"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/red_frame"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/separator"
        android:background="@drawable/red_frame" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/red_frame"
        android:layout_alignParentRight="true"
        android:text="ここを押すと終了↓"
        android:textColor="#fff"
        android:textSize="38dp"
        android:textStyle="bold" />

</com.example.overlaysample.view.TutorialView>