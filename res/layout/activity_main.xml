<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_centerInParent="true" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/type_system_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TYPE_SYSTEM_ERROR" />

        <RadioButton
            android:id="@+id/type_system_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TYPE_SYSTEM_OVERLAY" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ccc"
            android:gravity="center"
            android:text="ロック画面"
            android:textColor="#000"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/type_system_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TYPE_SYSTEM_ALERT" />

        <RadioButton
            android:id="@+id/type_priority_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TYPE_PRIORITY_PHONE" />

        <RadioButton
            android:id="@+id/type_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TYPE_TOAST" />

        <RadioButton
            android:id="@+id/type_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="TYPE_PHONE" />
    </RadioGroup>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/separator"
        android:text="tutorial view" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/separator"
        android:text="stop" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button3"
        android:layout_toLeftOf="@id/separator"
        android:text="floating view" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button3"
        android:layout_toRightOf="@id/separator"
        android:text="stop" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>